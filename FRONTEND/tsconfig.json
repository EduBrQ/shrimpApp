{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "importHelpers": true,
    "paths": {
      "@shared/models/*": [
        "app/shared/shared-models/*"
      ],
      "@shared/components/*": [
        "app/shared/shared-components/*"
      ],
      "@shared/modules/*": [
        "app/shared/shared-modules/*"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@shared/directives/*": [
        "app/shared/shared-directives/*"
      ],
      "@core/*": [
        "app/core/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
