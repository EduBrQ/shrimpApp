{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@shared/models/*": [
        "app/shared/shared-models/*"
      ],
      "@shared/components/*": [
        "app/shared/shared-components/*"
      ],
      "@shared/modules/*": [
        "app/shared/shared-modules/*"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@shared/directives/*": [
        "app/shared/shared-directives/*"
      ],
      "@core/*": [
        "app/core/*"
      ]
    },
    "angularCompilerOptions": {
      "fullTemplateTypeCheck": true,
      "strictInjectionParameters": true
    }
  }
